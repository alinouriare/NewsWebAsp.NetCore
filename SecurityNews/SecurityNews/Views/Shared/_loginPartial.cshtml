@model SecurityNews.Models.ViewModels.LoginViewModel
@using Microsoft.AspNetCore.Identity

@inject SignInManager<ApplicationUsers> signInManager



@if (signInManager.IsSignedIn(User))
{
    <div id="login">
        <form asp-area="" asp-controller="Account" asp-action="LogOut" style="margin-left:5px; margin-right:5px;">

            <div class="text-center">کاربر گرامی @ViewBag.FullName خوش آمدید</div>
            <hr style="height:1px; background-color:gray;" />

            <div style="margin-top: 30px; margin-bottom:15px;">
                <a href="/AdminPanel/Home/Index" class="btn btn-primary">پنل کاربری</a>
                <button type="submit" class="btn btn-danger pull-left">خروج از سیستم</button>
            </div>

        </form>
    </div>
}

else

{
    <form asp-controller="Account" asp-action="Login" method="post" asp-route-returnUrl="@ViewData["ReturnUrl"]" id="frmLogin"
      >

        <div id="login">
            <span class="header-lastnews">فرم ورود</span>

            <div class="hr"></div>
            <div class="form-group">
                <label asp-for="UserName" class="col-sm-4 control-label"></label>
                <div class="col-sm-8">
                    <input asp-for="UserName" class="form-control" id="txtusername" placeholder="نام کاربری">
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
            </div>


            <div class="form-group">
                <label asp-for="Password" class="col-sm-4 control-label"></label>
                <div class="col-sm-8">
                    <input asp-for="Password" class="form-control" id="txtusername" placeholder="رمز عبور">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <div class="checkbox">
                        <label asp-for="RememberMe">
                            <input asp-for="RememberMe" />
                            @Html.DisplayNameFor(m => m.RememberMe)
                        </label>
                    </div>
                </div>
            </div>

            <span id="spanerror" class="text-danger"></span>


            <div class="row" style="width: 100%">

                <div class="form-group pull-left ">
                    <button type="submit" class="btn btn-success">ورود</button>
                </div>

            </div>
        </div>
    </form>

}

