@{

    News n = ViewBag.NewsDetails;
}



<article class="no-gutter  separator-left">
    <section class="meta meta-top">
        <div class="content-infos pull-left">
            <span>
                <i class="glyphicon glyphicon-calendar"></i>
                <span class="numbers">
                    @n.NewsDate
                </span>
            </span>
            <span>
                <i class="glyphicon glyphicon-time"></i>
                <span class="numbers">
                    @n.NewsTime
                </span>
            </span>
            <span>
                <i class="glyphicon glyphicon-user"></i>
                <span class="numbers">@n.VisitCount</span>
            </span>
        </div>
    </section>
    <div class="clearfix"></div>
    <header>
        <h1 style="font-size:16px; margin:10px; font-weight:bold;">
            @n.Title
        </h1>
    </header>
    <main class="content  ">

        <div>

            @Html.Raw(n.Content)
        </div>






        <div class="clearfix"></div>
        <ul class="list-inline tags">
            <li class="label">
                <a>
                    <i class="fa fa-tag"></i>
                    @n.MetaTag
                </a>
            </li>

        </ul>

    </main>

</article>

