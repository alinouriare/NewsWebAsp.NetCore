                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">امن افزار <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="#">درباره ما</a></li>
                            <li><a href="#">ارتباط با ما</a></li>

                        </ul>
                    </li>
                </ul>


                <form class="navbar-form navbar-left hidden-sm" method="get" asp-controller="Home" asp-action="SearchResult">
                    <div class="form-group">
                        <input type="text" id="txtsearch" value="@searchString" name="txtsearch" class="form-control" placeholder="جستجو">
                    </div>
                    <button type="submit" class="btn btn-default">بگرد!</button>
                </form>

            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container-fluid -->
    </nav>

</div>