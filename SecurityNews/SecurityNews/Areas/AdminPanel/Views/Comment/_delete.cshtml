@model SecurityNews.Models.Comment

@{
    Layout = null;
}

<form asp-controller="Comment" asp-action="Delete">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">حذف نظر</h4>
    </div>

    <div class="modal-body form-horizontal">
        آیا از حذف نظر " @Model.Message " مطمئن هستید؟
    </div>

    <div class="modal-footer" style="text-align:left;">
        <button class="btn btn-default" type="button" data-dismiss="modal">برگشت</button>
        <button class="btn btn-danger" type="submit">
            حذف
        </button>
    </div>
</form>