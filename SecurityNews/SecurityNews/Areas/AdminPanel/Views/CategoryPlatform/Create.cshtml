@model SecurityNews.Models.CategoryPlatform

<div class="row center-block box box-primary">
    <div class="col-md-4 col-md-offset-4" style="margin-bottom:15px; margin-top:15px;">
        <form asp-area="AdminPanel" asp-controller="CategoryPlatform" asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="ایجاد" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-danger">بازگشت</a>
            </div>
        </form>


        @if (ViewBag.SuccessMessage!="")
        {
        <span style="color:green;">
            @ViewBag.SuccessMessage
        </span>
        }
    </div>
</div>

